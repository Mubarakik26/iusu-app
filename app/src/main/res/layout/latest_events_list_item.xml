<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/eventsImageIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:src="@drawable/profile_avatar_placeholder_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/latest_news_bg"
            android:padding="5dp"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/eventsTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Mega Halaqa and Darusu"
                android:textColor="#316339"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/eventsDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="20 October,2022"
                    android:layout_marginLeft="10dp"
                    android:textColor="#D5D5DD"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/eventsTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:00"
                    android:textSize="13sp"
                    android:textColor="#D5D5DD"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>


            </RelativeLayout>






        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
