<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profile_avatar_placeholder_large" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_news_image"
            android:fontFamily="@font/poppins_semibold"
            android:text="IUIU student community decides"
            android:textColor="#303032"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_news_image"
            android:fontFamily="@font/poppins_medium"
            android:text="20 October,2022"
            android:textSize="12sp"
            android:textColor="#353333"

            />


        <TextView
            android:id="@+id/tv_news_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_news_image"
            android:fontFamily="@font/poppins_medium"
            android:text="By Minister of Infromation"
            android:textColor="#065A03"
            android:textSize="12sp"

            />


    </RelativeLayout>



</androidx.cardview.widget.CardView>