<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/iv_event_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal Aid Clinic"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_toRightOf="@id/iv_event_image"/>


        <TextView
            android:id="@+id/tv_event_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_title"
            android:layout_marginRight="150dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/iv_event_image"
            android:fontFamily="@font/poppins_semibold"
            android:text="Date"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_event_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="12sp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_toRightOf="@id/tv_event_date_title"
            android:layout_below="@id/tv_event_title"/>


         <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 October,2022"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_toRightOf="@id/iv_event_image"
            android:layout_below="@id/tv_event_date_title"/>


        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_toRightOf="@id/tv_event_date_title"
            android:layout_below="@id/tv_event_time_title"/>



        <TextView
            android:id="@+id/tv_event_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 likes"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_toRightOf="@id/iv_event_image"
            android:layout_below="@id/tv_event_date"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>