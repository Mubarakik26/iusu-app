<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GoDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guildImageIV"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile_avatar_placeholder_large"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/guildNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname and Lastname"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_medium"/>

         <TextView
            android:id="@+id/guildTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guild Title"
             android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"/>

         <TextView
            android:id="@+id/guildCampusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus"
             android:textSize="13dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"/>


        <TextView
            android:id="@+id/guildAcademicYearTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus"
             android:textSize="13dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"/>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

          <TextView
            android:id="@+id/guildEmailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
             android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"
              android:layout_marginTop="10dp"/>


          <TextView
            android:id="@+id/guildPhoneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
             android:textSize="13dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"/>


          <TextView
            android:id="@+id/RoleDescriptionTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role description"
             android:textSize="18dp"
              android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/RoleDescriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role description content"
             android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"/>





    </LinearLayout>

</ScrollView>