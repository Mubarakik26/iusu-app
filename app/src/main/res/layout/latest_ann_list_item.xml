<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        >
        <TextView
            android:id="@+id/annTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/annDateTV"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Start up sequence"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:textColor="#D5042B02"
            android:textSize="18sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/annContentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/annTitleTV"
            android:fontFamily="@font/poppins"
            android:maxLines="2"
            android:lines="2"
            android:text="@string/ann_content"
            android:textSize="14sp" />

<!--        <TextView-->
<!--            android:id="@+id/txt_author"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/txt_title"-->
<!--            android:fontFamily="@font/poppins"-->
<!--            android:textSize="12sp"-->
<!--            android:text="Minister of Production"-->
<!--            android:textColor="@color/purple_500" />-->


        <TextView
            android:id="@+id/annDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="24 June,2022"
            android:textSize="12sp"
            android:textColor="@color/purple_500" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>