<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/newsImageIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:src="@drawable/profile_avatar_placeholder_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/latest_news_bg"
            android:padding="5dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/newsDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="20 October,2022"
                android:textSize="12sp"
                android:textColor="#34345E"

                />


            <TextView
                android:id="@+id/newsAuthorTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/poppins_medium"
                android:text="By Minister of Infromation"
                android:textColor="#D5D5DD"
                android:textSize="12sp"
               />
        <TextView
            android:id="@+id/newsTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_alignParentBottom="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="IUIU student community decides"
            android:textColor="#D5D5DD"
            android:maxLines="2"
            android:textSize="14sp" />




            />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
